<Window x:Class="ianpintodealmeida_d7_avaliacao.LoginMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ianpintodealmeida_d7_avaliacao"
        mc:Ignorable="d"
        Title="LoginMessage" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        Height="660" 
        Width="480"
        AllowsTransparency="True"
        Background="#99000000"
        MouseDown="OnClickOutsideMessage"
        >
    <Grid Height="180" Width="300" Background="White">
        <TextBlock x:Name="DialogMessage"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontWeight="Regular"></TextBlock>
    </Grid>
</Window>
